@{
    ViewData["Title"] = "Loan";
    Layout = "_LayoutBorrower";
}
<head>

</head>
<body>
    <h2>Data Loan</h2>
    <button class="btn btn-primary" id="btnAddLoan" data-toggle="modal" data-target="#addLoanModal">Add Loan</button>
    <table class="table table-stripped" id="loanTable">
        <thead>
            <tr>
                <th>Amount</th>
                <th>Interest Rate</th>
                <th>Duration</th>
                <th>Status</th>
                <th>Action</th>
            </tr>
        </thead>
        <tbody></tbody>
    </table>
    <!--Modal-->
    <div class="modal fade" id="addLoanModal" tabindex="-1" role="dialog" aria-labelledby="addLoanModalLabel" aria-hidden="true">
        <div class="modal-dialog" role="document">
            <div class="modal-content">
                <div class="modal-header">
                    <h5 class="modal-title" id="addLoanModalLabel">Request Loan</h5>
                </div>
                <div class="modal-body">
                    <form id="loanForm">
                        <!--
                            <input type="hidden" id="borrowerId" />
                        -->
                        <div class="form-group">
                            <label for="amount">Amount</label>
                            <input type="number" class="form-control" id="amount" required />
                        </div>
                        <div class="form-group">
                            <label for="interest">Interest Rate</label>
                            <input disabled type="number" class="form-control" id="interestRate" placeholder="2,5%" required />
                        </div>
                        <div class="form-group">
                            <label for="duration">Duration</label>
                            <input disabled type="number" class="form-control" id="duration" placeholder="12 months" required />
                        </div>
                    </form>
                </div>
                <div class="modal-footer">
                    <button type="button" class="btn btn-primary" id="btnSubmitLoan" onclick="RequestLoan()">Submit</button>
                </div>
            </div>
        </div>
    </div>
</body>
@section Scripts {
    <script src="~/js/mstloan.js" asp-append-version="true"></script>
    <script>
        document.getElementById('btnAddLoan').addEventListener('click', function () {
            $('#addLoanModal').modal('show');;
        });
    </script>
}
